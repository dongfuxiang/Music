<Application x:Class="Music.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Music"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="FF">../Assets/Fonts/#iconfont Regular</FontFamily>
            <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
                <Setter Property="Foreground" Value="#B1AFBA" />
                <Setter Property="GroupName" Value="A" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border Name="border"
                                    Margin="0,5"
                                    BorderThickness="3,0,0,0">
                                <StackPanel Margin="30,5,0,5" Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center"
                                               FontFamily="{StaticResource FF}"
                                               FontSize="{TemplateBinding FontSize}"
                                               Foreground="{TemplateBinding Foreground}"
                                               Text="{TemplateBinding Tag}" />
                                    <ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>

                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#AA6063FB" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#116063FB" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Foreground" Value="#AA6063FB" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="MenuLabelStyle" TargetType="Label">
                <Setter Property="Foreground" Value="#555" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Label">
                            <Border x:Name="border"
                                    Margin="0,5"
                                    BorderBrush="Transparent"
                                    BorderThickness="2,0,0,0">
                                <StackPanel Margin="30,5,0,5" Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center"
                                               FontFamily="{StaticResource FF}"
                                               FontSize="{TemplateBinding FontSize}"
                                               Foreground="{TemplateBinding Foreground}"
                                               Text="{TemplateBinding Tag}" />
                                    <ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>

                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="ClassButtonStyle" TargetType="RadioButton">
                <Setter Property="Foreground" Value="#B1AFBA" />
                <Setter Property="FontSize" Value="11" />
                <Setter Property="GroupName" Value="A" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="border"
                                    Height="24"
                                    Margin="1"
                                    Background="#EEE"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#116063FB" />
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#AA6063FB" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Foreground" Value="#6063FB" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="SheetButtonStyle" TargetType="RadioButton">
                <Setter Property="Foreground" Value="#B1AFBA" />
                <Setter Property="GroupName" Value="A" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border Name="border" Height="28">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center"
                                               FontFamily="{StaticResource FF}"
                                               FontSize="{TemplateBinding FontSize}"
                                               Foreground="{TemplateBinding Foreground}"
                                               Text="{TemplateBinding Tag}" />
                                    <ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>

                            </Border>
                            <ControlTemplate.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#116063FB" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>

                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Foreground" Value="#AA6063FB" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
                <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="White"
                                    BorderBrush="#EEE"
                                    BorderThickness="1"
                                    CornerRadius="13">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  Margin="8,0,0,0"
                                                  VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="1"
                                               Margin="5,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontFamily="{StaticResource FF}"
                                               FontSize="{TemplateBinding FontSize}"
                                               Foreground="#BBB"
                                               Text="&#xe651;" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
